<div class="offset-md-2 col-md-8">
  <h4>Orders List </h4>
  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Company Name</th>
      <th>Quantity of Widgets</th>
      <th>Created At</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |p| %>
      <tr>
        <td><%= p.company.name %></td>
        <td><%= p.quantity %></td>
        <td><%= p.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script>
    $(document).on('ready turbolinks:load', function () {
        $('#example').DataTable();
    });
</script>

