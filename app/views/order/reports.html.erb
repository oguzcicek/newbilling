
<h4>Report 1 </h4>

<p>Total Amount by Affilates</p>
<div class="offset-md-2 col-md-8">

  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Company Name</th>
      <th>Total Sales</th>
      <th>Total Amount Paid</th>
    </tr>
    </thead>

    <tbody>
    <% @total_amounts_affiliates.each do |c| %>
      <tr>
        <td><%= c[:name] %> </td>
        <td><%= c[:total] %></td>
        <td> $ <%= c[:amount] %>  </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>


